<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/content_Input"
        android:hint="내용을 작성해주세요"/>
    <TextView
        android:layout_centerInParent="true"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/galleryBtn"
        android:text="사진 선택"
        android:background="#C8C8C8"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:layout_below="@id/galleryBtn"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uploadBtn"
        android:text="업로드"
        android:background="#C8C8C8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/stabar"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/allList"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/stahome"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/myList"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/stamy"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/Upload"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/stapost2"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/userInfo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/staset"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>